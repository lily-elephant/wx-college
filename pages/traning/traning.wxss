/* pages/courselist/courselist.wxss */
.img-wrapper{
  border-bottom: 4rpx solid #d9d9d9;
  max-height: 370rpx;
  overflow: hidden;
}
.img-wrapper .img{
  display: block;
  width: 100%;
}
.course-wrapper{
  padding: 0 40rpx;
}
.course-info{
  padding: 24rpx 0;
  line-height: 1.5;
  text-align: justify;
}
.course-name{
  display: block;
  padding-bottom: 12rpx;
}
.course-desc{
  font-size: 28rpx;
}
.course-count{
  font-size: 24rpx;
}
.tabs-box{
  display: flex;
}
.tabs-label{
  flex: 1;
  line-height: 76rpx;
  text-align: center;
}
.tabs-box .active{
  position: relative;
  color: #333;
}

.tabs-box .active:before{
  position: absolute;
  bottom: -1rpx;
  left: 0;
  content: '';
  height: 5rpx;
  width: 100%;
  background: #333;
}
.course-item{
  position: relative;
  display: flex;
  padding: 40rpx 0;
}
.course-item-imgwrapper{
  flex: 0 0 200rpx;
  width: 200rpx;
  height: 136rpx;
  overflow: hidden;
}
.course-item-img{
  height: 136rpx; 
  width: 100%; 
}
.course-item-info{
  padding: 0 0 0 40rpx;
  width: 100%;
  box-sizing: border-box;
}
.course-item-tit{
  font-size: 28rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  height: 92rpx;
}
.course-item-counts{
  position: relative;
}
.course-item-visited{
  display: table;
  font-size: 26rpx;
}
.visited-count{
  display: table-cell;
  vertical-align: middle;
}
.img-icon{
  display: table-cell;
  vertical-align: middle;
  width: 46rpx;
  height: 36rpx;
  padding: 0 6rpx 0 0;
}
.course-item-price{
  position: absolute;
  bottom: 0;
  right: 140rpx;
  line-height: 36rpx;
  color: #f63e3e;
  font-size: 28rpx;
}
.nobuy,.buyed{
  position: absolute;
  bottom: 40rpx;
  right: 0;
  padding: 12rpx 30rpx;
  line-height: 1;
  border-radius: 3px;
  color: #fff;
  font-size: 30rpx;
}
.nobuy{
  background: #53add3;
}
.buyed{
  background: #099;  
}

.course-intro-img{
  display: block;
  width: 100%;
  margin: 30rpx 0;
}
.course-intro-words{
  line-height: 1.5;
  text-indent: 2em;
  font-size: 28rpx;
  text-align: justify;
}
.tabs-content{
  margin-bottom: 150rpx;
}
.btn-wrapper{
  padding: 30rpx 0;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 2;
  background: #fff;
  line-height: 1;
}
.modal-box{
  position:fixed;
  z-index: 4;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  }

.modal-body{
  position:relative;
}

.modal-content{
  margin:30% 60rpx 0;
  padding: 50rpx 0;
  background: #fff;
  overflow: hidden;
  border-radius: 10rpx;
  font-size: 28rpx;
}
.money{
  padding: 20rpx 0;
  font-size: 0;
}
.dollar{
  display: inline-block;
  vertical-align: bottom;
  line-height: 44rpx;
  font-size: 28rpx;
}
.money-count{
  display: inline-block;
  vertical-align: top;
  line-height: 1;
  font-size: 48rpx;
}
.tips{
  display: inline-block;
  vertical-align: bottom;
  line-height: 44rpx;
  font-size: 24rpx;
}
.modal-foot{
  padding: 40rpx 40rpx 0;
}
.modal-foot .btn-primary{
  padding: 0 60rpx!important;
  box-shadow: none;
}
.cancel{
  color: #333;
}
.traningBuy,
.trainNobuy{
  border-radius:3px;
  color:#fff;
  text-align: center;
  margin:30rpx 0 10rpx;
}
.traningBuy{
  background:#099;
}
.trainNobuy{
  background: #53add3;
}
image{
  width: 100%!important;
}
video{
  width: 100%!important;
}
.padding20{
  padding: 20rpx;
}
.paddingT12{
  padding:12rpx 0;
}
.lineheight8{
  line-height: 1.8;
  text-indent: 2em;
}